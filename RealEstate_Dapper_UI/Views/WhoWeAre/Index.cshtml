@using static RealEstate_Dapper_UI.Controllers.WhoWeAreController
@model WhoWeAreViewModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    var count1 = 0;
    var count2 = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Detail)
                            {
                                count1++;
                                <tr>
                                    <th scope="row">@count1</th>
                                    <td>@item.Title</td>
                                    <td>@item.Subtitle</td>
                                    <td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/WhoWeAre/UpdateWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAreDetail/" class="btn btn-outline-info">Yeni Biz Kimiz Alanı</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Avantajlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Avantaj Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Advantages)
                            {
                                count2++;
                                <tr>
                                    <th scope="row">@count2</th>
                                    <td>@item.AdvantagesName</td>
                                    <td>@item.AdvantagesStatus</td>
                                    <td><a href="/WhoWeAre/DeleteWhoWeAreAdvantages/@item.AdvantagesID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/WhoWeAre/UpdateWhoWeAreAdvantages/@item.AdvantagesID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAreAdvantages/" class="btn btn-outline-info">Yeni Avantaj</a>
                </div>
            </div>
        </div>
    </div>
</div>
